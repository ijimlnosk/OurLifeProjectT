<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:background="#ffffff">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="1dp">

        //아이디

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_SignEmail"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/text_soild"
            android:fontFamily="@font/nanmgothic"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.176" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tx_SignId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:background="@drawable/white_view"
            android:fontFamily="@font/nanmgothic"
            android:padding="2dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="이메일"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/edt_SignEmail"
            app:layout_constraintEnd_toEndOf="@+id/edt_SignEmail"
            app:layout_constraintHorizontal_bias="0.049"
            app:layout_constraintStart_toStartOf="@+id/edt_SignEmail" />

        //이름

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_SignName"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/text_soild"
            android:fontFamily="@font/nanmgothic"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.275" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tx_SignName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:background="@drawable/white_view"
            android:fontFamily="@font/nanmgothic"
            android:padding="2dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="이름"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/edt_SignName"
            app:layout_constraintEnd_toEndOf="@+id/edt_SignName"
            app:layout_constraintHorizontal_bias="0.049"
            app:layout_constraintStart_toStartOf="@+id/edt_SignName" />

        //생년월일

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_SignBirth1"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/text_soild"
            android:fontFamily="@font/nanmgothic"
            android:gravity="center"
            android:hint="생년월일 8자리를 입력해주세요"
            android:maxLength="8"
            android:paddingStart="5dp"
            android:textSize="13sp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.377" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tx_SignBirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:background="@drawable/white_view"
            android:fontFamily="@font/nanmgothic"
            android:padding="2dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="생년월일"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/edt_SignBirth1"
            app:layout_constraintEnd_toEndOf="@+id/edt_SignBirth1"
            app:layout_constraintHorizontal_bias="0.049"
            app:layout_constraintStart_toStartOf="@+id/edt_SignBirth1" />

        //이메일

        //전화번호

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_SignPhoneNum1"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@drawable/text_soild"
            android:fontFamily="@font/nanmgothic"
            android:gravity="center"
            android:maxLength="3"
            android:textSize="15sp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.265"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.475" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_SignPhoneNum2"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@drawable/text_soild"
            android:fontFamily="@font/nanmgothic"
            android:gravity="center"
            android:maxLength="4"
            android:textSize="15sp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.144"
            app:layout_constraintStart_toEndOf="@id/edt_SignPhoneNum1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.475" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_SignPhoneNum3"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@drawable/text_soild"
            android:fontFamily="@font/nanmgothic"
            android:gravity="center"
            android:maxLength="4"
            android:textSize="15sp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.208"
            app:layout_constraintStart_toEndOf="@id/edt_SignPhoneNum2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.475" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="-"
            android:textSize="30sp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/edt_SignPhoneNum1"
            app:layout_constraintEnd_toStartOf="@+id/edt_SignPhoneNum2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/edt_SignPhoneNum1"
            app:layout_constraintTop_toBottomOf="@+id/tx_SignPhoneNum"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="-"
            android:textSize="30sp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/edt_SignPhoneNum2"
            app:layout_constraintEnd_toStartOf="@+id/edt_SignPhoneNum3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/edt_SignPhoneNum2"
            app:layout_constraintTop_toTopOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tx_SignPhoneNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:background="@drawable/white_view"
            android:fontFamily="@font/nanmgothic"
            android:maxLength="20"
            android:padding="2dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="전화번호"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/edt_SignPhoneNum1"
            app:layout_constraintEnd_toEndOf="@+id/edt_SignPhoneNum1"
            app:layout_constraintHorizontal_bias="0.833"
            app:layout_constraintStart_toStartOf="@+id/edt_SignPhoneNum1" />

        //비밀번호

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_SignPw"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/text_soild"
            android:fontFamily="@font/nanmgothic"
            android:gravity="center"
            android:hint="최소 8자 이상 입력해주세요."
            android:inputType="textPassword"
            android:textSize="15sp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.575" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tx_SignPw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:background="@drawable/white_view"
            android:fontFamily="@font/nanmgothic"
            android:padding="2dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="비밀번호"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/edt_SignPw"
            app:layout_constraintEnd_toEndOf="@+id/edt_SignPw"
            app:layout_constraintHorizontal_bias="0.048"
            app:layout_constraintStart_toStartOf="@+id/edt_SignPw" />

        //비밀번호 확인

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_SignPwOk"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/text_soild"
            android:fontFamily="@font/nanmgothic"
            android:gravity="center"
            android:hint="위 비밀번호와 같아야 합니다."
            android:inputType="textPassword"
            android:maxLength="20"
            android:textSize="15sp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.675" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tx_SignPwOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:background="@drawable/white_view"
            android:fontFamily="@font/nanmgothic"
            android:padding="2dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="비밀번호 확인"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/edt_SignPwOk"
            app:layout_constraintEnd_toEndOf="@+id/edt_SignPwOk"
            app:layout_constraintHorizontal_bias="0.048"
            app:layout_constraintStart_toStartOf="@+id/edt_SignPwOk" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_goToMainList"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_style"
            android:fontFamily="@font/nanmgothic"
            android:text="확 인"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_SignPwOk"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>